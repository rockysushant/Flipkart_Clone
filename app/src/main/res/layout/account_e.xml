<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1EEED"
            android:orientation="vertical"
            tools:context=".BottomNavFragments.EFragment">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="69dp"

                app:cardElevation="3dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="29dp"
                    android:id="@+id/HeySushant"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:text="Hey! Sushant Soni"
                    android:textColor="#0B0A0A"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"

                    android:id="@+id/joinfipkartplus"

                    android:text="Join Flipkart Plus"



                    android:textColor="#0B0A0A"
                    android:textStyle="italic" />


            </androidx.cardview.widget.CardView>





<!--            ORDER LAYOUT-->



            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:padding="9dp"
                        android:src="@drawable/imgorder"
                        >

                    </ImageView>



                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"

                        android:padding="9dp"
                        android:src="@drawable/imgwish"
                        >

                    </ImageView>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="70dp"

                        android:layout_marginBottom="10dp"

                        android:padding="9dp"
                        android:src="@drawable/imgcoupon"
                        >

                    </ImageView>



                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"

                        android:padding="9dp"
                        android:src="@drawable/imghelp"
                        >

                    </ImageView>




                </LinearLayout>











            </LinearLayout>







            // CREDIT OPTION



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:elevation="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="5.5dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Credit Options"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/payLater"
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/baseline_credit_card_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"


                        android:drawablePadding="12dp"
                        android:text="Flipkart Pay Later"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/creditCard"
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"

                        android:drawableStart="@drawable/baseline_currency_rupee_24"

                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:drawablePadding="12dp"
                        android:text="Flipkart Axis Bank Credit Card"
                        android:textColor="@color/black"

                        android:textSize="16sp"

                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="255dp"

                android:layout_marginTop="10dp"
                android:elevation="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:padding="5.5dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Account  Settings"
                        android:layout_marginTop="13dp"

                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/flipkartPlus"
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/baseline_card_membership_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:drawablePadding="12dp"

                        android:text="Flipkart Plus"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/editProfile"
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"


                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/baseline_account_box_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:drawablePadding="12dp"
                        android:text="Edit Profile"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cardAndWallet"
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/baseline_card_giftcard_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"


                        android:drawablePadding="12dp"
                        android:text="Saved Card and Wallet"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/address"
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/baseline_add_location_alt_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:drawablePadding="12dp"


                        android:text="Saved Address"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/languages"
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/baseline_sort_by_alpha_24"

                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"

                        android:drawablePadding="12dp"
                        android:text="Select Language"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:padding="5.5dp"
                android:elevation="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="My Activity"
                    android:textSize="17sp"
                    android:layout_marginTop="6dp"

                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_edit_note_24"
                    android:id="@+id/reviews"
                    android:padding="4dp"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"

                    android:layout_marginTop="29dp"
                    android:text="Reviews"
                    android:drawablePadding="12dp"
                    android:textColor="@color/black"
                  />

                <TextView
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:drawableStart="@drawable/baseline_question_answer_24"
                    android:id="@+id/quesAndAns"

                    android:padding="5dp"
                    android:textSize="16sp"



                    android:drawablePadding="12dp"
                    android:textColor="@color/black"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"

                    android:text="Questions  Answers"

                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:padding="5.5dp"
                android:elevation="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:textSize="16dp"

                    android:text="Earn With Flipkart"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_star_border_24"
                    android:id="@+id/creatorStudio"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:drawablePadding="12dp"
                    android:textColor="@color/black"

                    android:layout_marginTop="30dp"
                    android:text="Flipkart Creator Studio"
                  />

                <TextView
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sell"
                    android:textSize="16dp"

                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/baseline_shopping_cart_checkout_24"
                    android:layout_marginTop="60dp"
                    android:drawablePadding="12dp"
                    android:textColor="@color/black"
                    android:text="Sell"
                   />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_marginTop="10dp"
                android:padding="5.5dp"
                android:elevation="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"

                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:text="FeedBack and Information"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/termsAndPolicies"
                    android:drawableStart="@drawable/baseline_policy_24"
                    android:layout_marginLeft="10dp"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="40dp"
                    android:textSize="16sp"
                    android:drawablePadding="12dp"
                    android:textColor="@color/black"
                    android:text="Terms And Policies"
                    />

                <TextView
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/browseFaq"
                    android:layout_marginLeft="10dp"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:drawableStart="@drawable/baseline_question_mark_24"
                    android:layout_marginTop="69dp"
                    android:text="Browse Faqs"
                    android:textSize="16sp"



                    android:drawablePadding="12dp"
                    android:textColor="@color/black"
                     />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"

                android:layout_marginBottom="70dp"
                android:elevation="40dp">

                <TextView
                    android:id="@+id/logOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="160dp"

                    android:text="LOG OUT"
                    android:textColor="@color/purple_700"

                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


</LinearLayout>








